from time import sleep
from os import name, system

def programa():
    print('''
    -------------------------------------------
                   \033[34mTerminalArt\033[m
    -------------------------------------------''')

    # Fun√ß√£o - Formata√ß√µes
    def formatacoes():
        texto = "Python"
        numero_decimal = 12345.6789
        numero_inteiro = 255

    # Alinhamento de Strings
        print("\n---- \033[4;36mAlinhamento de Strings\033[m ----\n")
        print(f"{'VAR\033[1;35m'}:<{'\033[m'}VALOR - {'\033[31m'}Alinhado √† esquerda:\033[m |{texto:<20}|")
        print(f"{'VAR\033[1;35m'}:>{'\033[m'}VALOR - {'\033[31m'}Alinhado √† direita:\033[m |{texto:>20}|")
        print(f"{'VAR\033[1;35m'}:^{'\033[m'}VALOR - {'\033[31m'}Centralizado:\033[m |{texto:^20}|")
        print(f"{'VAR\033[1;35m'}-^{'\033[m'}VALOR - {'\033[31m'}Preenchido com '-':\033[m |{texto:-^20}|")

    # Formata√ß√£o de N√∫meros Decimais
        print("\n---- \033[4;36mFormata√ß√£o de N√∫meros Decimais\033[m ----\n")
        print(f"{'VAR\033[1;35m'}:.\033[mVALOR\033[35mf{'\033[m'}       - {'\033[31m'}Decimal com 2 casas:\033[m {numero_decimal:.2f}")
        print(f"{'VAR\033[1;35m'}:,.\033[mVALOR\033[35mf{'\033[m'}      - {'\033[31m'}Separador de milhar:\033[m {numero_decimal:,.2f}")
        print(f"{'VAR\033[1;35m'}:>\033[mVALOR\033[35m.\033[mVALOR\033[35mf{'\033[m'} - {'\033[31m'}Alinhado √† direita, 20 caracteres:\033[m {numero_decimal:>20.2f}")
        print(f"{'VAR\033[1;35m'}-<\033[mVALOR\033[35m.\033[mVALOR\033[35mf{'\033[m'} - {'\033[31m'}Alinhado √† esquerda com '-':\033[m {numero_decimal:-<20.2f}")
        print(f"{'VAR\033[1;35m'}:.\033[mVALOR\033[35me{'\033[m'}       - {'\033[31m'}Formato exponencial:\033[m {numero_decimal:.2e}")

    # Formata√ß√£o de Inteiros
        print("\n---- \033[4;36mFormata√ß√£o de Inteiros\033[m ----\n")
        print(f"{'VAR\033[1;35m'}:d{'\033[m'} - {'\033[31m'}Decimal:\033[m {numero_inteiro:d}")
        print(f"{'VAR\033[1;35m'}:b{'\033[m'} - {'\033[31m'}Bin√°rio:\033[m {numero_inteiro:b}")
        print(f"{'VAR\033[1;35m'}:o{'\033[m'} - {'\033[31m'}Octal:\033[m {numero_inteiro:o}")
        print(f"{'VAR\033[1;35m'}:x{'\033[m'} - {'\033[31m'}Hexadecimal (min√∫sculo):\033[m {numero_inteiro:x}")
        print(f"{'VAR\033[1;35m'}:X{'\033[m'} - {'\033[31m'}Hexadecimal (mai√∫sculo):\033[m {numero_inteiro:X}")

    # Sinaliza√ß√£o
        print("\n---- \033[4;36mSinaliza√ß√£o de N√∫meros\033[m ----\n")
        print(f"{'VAR\033[1;35m'}:+{'\033[m'} - {'\033[31m'}Sinal expl√≠cito para positivo:\033[m {numero_inteiro:+}")
        print(f"{'\033[1;35m'}-{'\033[m'}VAR  - {'\033[31m'}Sinal negativo apenas (padr√£o):\033[m {-numero_inteiro}")
        print(f"{'VAR\033[1;35m'}: {'\033[m'} - {'\033[31m'}Espa√ßo para n√∫meros positivos:\033[m {numero_inteiro: }")

    # Formata√ß√£o de Porcentagem
        print("\n---- \033[4;36mFormata√ß√£o de Porcentagem\033[m ----\n")
        print(f"{'\033[1;35m'}:.2%{'\033[m'} - {'\033[31m'}Porcentagem (0.8523 = 85.23%):\033[m {0.8523:.2%}")


    # Fun√ß√£o - Estilos e cores
    def estilos():
        frase = "Python √© divertido"

        # Estilos de texto
        estilos = {
            '0 - Normal': '0',
            '1 - Negrito': '1',
            '2 - Desbotado': '2',
            '3 - It√°lico': '3',
            '4 - Sublinhado': '4',
            '7 - Negativo': '7',
            '9 - Riscado': '9',
        }

        # Cores de texto (foreground)
        cores_texto = {
            '30 - Preto': '30',
            '31 - Vermelho': '31',
            '32 - Verde': '32',
            '33 - Amarelo': '33',
            '34 - Azul': '34',
            '35 - Laranja': '35',
            '36 - Roxo': '36',
            '37 - Branco': '37',
        }

        # Cores de fundo (background)
        cores_background = {
            '40 - Preto': '40',
            '41 - Vermelho': '41',
            '42 - Verde': '42',
            '43 - Amarelo': '43',
            '44 - Azul': '44',
            '45 - Laranja': '45',
            '46 - Roxo': '46',
            '47 - Branco': '47',
        }

        print("\n---- \033[4;36mEstilos\033[m ----\n")
        for nome_estilo, estilo in estilos.items():
            # Aplica o estilo na frase
            codigo_ansi = f"\033[{estilo}m"
            reset = "\033[0m"
            print(f"{codigo_ansi}{nome_estilo}: {frase}{reset}")

        print("\n---- \033[4;36mCores de Texto\033[m ----\n")
        for nome_cor_texto, cor_texto in cores_texto.items():
            # Aplica a cor de texto na frase
            codigo_ansi = f"\033[{cor_texto}m"
            reset = "\033[0m"
            print(f"{codigo_ansi}{nome_cor_texto}: {frase}{reset}")

        print("\n---- \033[4;36mCores de Background\033[m ----\n")
        for nome_cor_background, cor_background in cores_background.items():
            # Aplica o background na frase
            codigo_ansi = f"\033[{cor_background}m"
            reset = "\033[0m"
            print(f"{codigo_ansi}{nome_cor_background}: {frase}{reset}")

    # Escolha de qual fun√ß√£o executar
    try:
        escolha = int(input('''
            --------------------------
                   \033[36mEu escolho...\033[m
            --------------------------
               [\033[1;34m 1 \033[m] - Estilos e Cores
               [\033[1;34m 2 \033[m] - Formata√ß√µes
               [\033[1;34m 3 \033[m] - Emojis e Simbolos
            --------------------------
               Sua op√ß√£o:  \033[35m'''))

    # Op√ß√µes
        match escolha:
            case 1:
                print('\n\033[m---- \033[4;36mEsqueleto\033[m ----')
                print(f'{'\n\033[1;35m'}\\033[{'\033[0;34m'}estilo{'\033[1;35m'};{'\033[0;34m'}cor{'\033[1;35m'};{'\033[0;34m'}fundo{'\033[1;35m'}m\033[m')
                print('''
Para limpar, use:
\033[35m\\033[m\033[m

\033[32mExemplo pr√°tico:\033[m

\\033[1m - \033[1m Python √© divertido!\033[m
\\033[34m - \033[34m A linda flor.\033[m
\\033[3;36m - \033[3;36m O lobo ama bolo.\033[m
''')
                estilos()
            case 2:
                print('\n\033[1;31mO "\033[mVALOR\033[1;31m" deve ser substitu√≠do por um n√∫mero de acordo com a necessidade!')
                print('A "\033[mVAR\033[1;31m" (v√°riavel) deve ser substitu√≠do pela vari√°vel de acordo com a necessidade!\033[m\n')
                sleep(3)
                formatacoes()
            case 3:
                print('\n\n\033[m---- \033[4;36mComo utilizar?\033[m ----')
                print('''
    \033[31mH√° duas maneiras!\033[m
------------------------
  \033[1;36m Maneira 1 - Simples\033[m
------------------------

\033[0;35mV√° at√© o site:\033[1;32m  https://emojiguide.org/smiling-face-with-heart-eyes \n\033[35m
Escolha o emoji e o copie na parte "Symbol"
Por fim, basta o colar na sua fun√ß√£o.
\033[33mExemplo: \033[35mprint('Ol√° mundo! üåé')

\033[1;36mResultado:\033[m

Ol√° mundo! üåé


------------------------------
    \033[1;36mManeira 2 - Com c√≥digos\033[m
------------------------------

\033[0;35mV√° at√© o site:\033[1;32m  https://emojiguide.org/smiling-face-with-heart-eyes \n\033[35m
Escolha o emoji e copie o seu "Codepoint", que √© uma sequ√™ncia de caracteres (\033[33mExemplo:\033[35m U+1f60d).
Coloque esse c√≥digo na fun√ß√£o print:
\033[34m\nprint('\\U\033[m+\033[34m1f60d')\n\033[35m
Por fim, substitua o "+" por tr√™s zeros:
\033[34m\nprint('\\U0001f60d')\n\033

\033[1;36mResultado:\033[m

\U0001f60d

-----------------------------------------------------

\033[35mObs: Em caso de emojis que tenham dois Codepoint...
\033[33mExemplo:\033[35m U+26a0 U+fe0f

Se utiliza da seguinte forma:

\033[34mprint('\\U000026a0\\U0000fe0f')

\033[1;36mResultado:\033[m

\U000026a0\U0000fe0f

\033[31mAdemais, alguns Codepoint necessitar√£o de mais ou menos que tr√™s zeros, ent√£o os digite at√© mudar a cor padr√£o da string
Quando criamos uma mensagem entre aspas, ela fica de dterminada cor, e quando definimos um emoji, a cor mudar√°! (O mesmo que ocorre com \\n).\033[m
''')
            case _:
                print('\n\033[1;31m    Escolha [ \033[34m1\033[1;31m ] ou [ \033[34m2\033[1;31m ]!')
    except ValueError:
        print('\n\033[1;31m              Digite apenas n√∫meros!')
        sleep(1.4)
        return

# Estrutura de repeti√ß√£o para recome√ßar
while True:
    programa()
    sleep(5)
    print('\n\n\033[35m                 --- Aguarde ---\033[m')
    sleep(3)
    opcoes = str(input('''
-------------------
    \033[36mSua op√ß√µes:\033[m
-------------------
[ \033[32m1\033[m ] - Recome√ßar
[ \033[32m2\033[m ] - Encerrar
-------------------
Eu escolho:  \033[35m''')).strip()
    if opcoes != '1':
        break
    sleep(1.2)
    print('\n\033[32m--- Recome√ßando ---\033[m')
    sleep(2.5)
    system('cls' if name == 'nt' else 'clear')

print('\n\033[31;1m---------------- FIM ----------------\033[m\n')
